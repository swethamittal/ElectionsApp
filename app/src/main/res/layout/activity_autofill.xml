<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#1C2761"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/heading_and_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C2761"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="VOTER REGISTRATION"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColorHighlight="#1C2761"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_and_image"
        android:background="#1C2761"
        android:rowCount="15"
        android:columnCount="2"
        >
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="ADHAAR  NUMBER:"
            android:gravity="left"
            android:textColor="#ffff"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:layout_width="220dp"
            android:id="@+id/adhaarNumber"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Full Name:"
            android:textColor="#ffff" />

        <EditText
            android:id="@+id/name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="Father/Husband's Name:"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/father_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_width="170dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Date Of Birth"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/dob"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Mobile No:"
            android:layout_width="170dp"
            android:gravity="left"
            android:textColor="#ffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="220dp"
            android:id="@+id/Mobile_no"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box"/>


        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:text="Gender"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/male"
                android:textColor="#ffffff"
                android:text="Male"
                android:editable="false"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/female"
                android:textColor="#ffffff"
                android:text="Female"
                android:editable="false"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/other"
                android:textColor="#ffffff"
                android:text="Others"
                android:editable="false"/>

        </RadioGroup>

        <TextView
            android:layout_height="wrap_content"
            android:text="House Number:"
            android:layout_width="170dp"
            android:gravity="left"
            android:textColor="#ffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="220dp"
            android:id="@+id/Hno"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Street:"
            android:layout_width="170dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="220dp"
            android:id="@+id/Street"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="Area:"
            android:layout_width="170dp"
            android:gravity="left"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="220dp"
            android:id="@+id/Area"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_height="wrap_content"
            android:text="District"
            android:layout_width="170dp"
            android:gravity="left"
            android:textColor="#ffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/District"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_box"
            android:editable="false" />

        <TextView
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_width="170dp"
            android:gravity="left"
            android:textColor="#ffff"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="220dp"
            android:id="@+id/State"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box"
            android:editable="false"/>

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Assembly Constituency"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:editable="false"/>

        <EditText
            android:layout_width="220dp"
            android:id="@+id/Constituency"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box"
            android:editable="false"/>
    </GridLayout>

        <LinearLayout
            android:id="@+id/checkbox_for_declaration"
            android:layout_width="match_parent"
            android:background="#1C2761"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_details">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/declaration"
                android:buttonTint="#fff"
                android:text="@string/declaration"
                android:textColor="#fff"
                android:onClick="selectItem">
            </CheckBox>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/successful"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#1C2761"
            android:layout_below="@+id/checkbox_for_declaration">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:id="@+id/final_result"
                android:text=""/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="#1C2761"
        android:layout_below="@+id/successful"
        android:padding="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/VNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:onClick="password"/>

    </LinearLayout>

    </RelativeLayout>
</ScrollView>