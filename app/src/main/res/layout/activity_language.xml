<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <LinearLayout
        android:id="@+id/imagething"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="177dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/voter" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/cast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagething"
        android:gravity="center">

        <TextView
            android:id="@+id/text"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="Cast your vote"
            android:textColor="#1C2761"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/voteright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cast"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Your vote is your right!"
            android:textAlignment="center"
            android:textColor="#1C2761"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/voteright"
        android:orientation="vertical"
        android:padding="25dp"
        android:gravity="center"
        android:background="#1C2761">

        <Button
            android:id="@+id/eng_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="271dp"
            android:background="@drawable/white_box_button"
            android:text="English"
            android:padding="10dp"
            android:textColor="#1C2761"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/hin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="271dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/white_box_button"
            android:text="हिंदी"
            android:textColor="#1C2761"
            android:textSize="17sp" />

        <Button
            android:id="@+id/tel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="271dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/white_box_button"
            android:text="తెలుగు"
            android:textColor="#1C2761"
            android:textSize="17sp" />

    </LinearLayout>


</RelativeLayout>
